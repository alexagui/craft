{
  "name": "marbles",
  "version": "1.0.0",
  "description": "Website for marbles.be",
  "main": "webpack.mix.js",
  "author": "Marbles <rias@marbles.be>",
  "copyright": "marbles",
  "license": "UNLICENSED",
  "private": true,
  "paths": {
    "src": {
      "base": "./src/",
      "fonts": "./src/fonts/",
      "img": "./src/img/",
      "json": "./src/json/",
      "js": "./src/js/",
      "scss": "./src/scss/"
    },
    "dist": {
      "base": "./web/dist/",
      "scss": "./web/dist/css/",
      "js": "./web/dist/js/",
      "fonts": "./web/dist/fonts/",
      "img": "./web/dist/img/"
    },
    "scss": {
      "src": "./src/scss/site.scss",
      "dest": "./web/css/"
    },
    "craftConfig": "./config/",
    "templates": "./templates/"
  },
  "urls": {
    "live": "https://www.marbles.be/",
    "local": "http://www.marbles.wip/",
    "critical": "https://www.marbles.be/"
  },
  "vars": {
    "scssName": "site.scss",
    "cssName": "site.css",
    "jsName": "site.js"
  },
  "globs": {
    "distCss": [
      "./build/css/*.css"
    ],
    "img": [
      "./web/img/"
    ],
    "components": [],
    "fonts": [
      "./build/fonts/fontello/font/*.{eot,ttf,woff,woff2}",
      "./src/fonts/*.{eot,ttf,woff,woff2}"
    ],
    "purgecss": [
      "./templates/**/*.{html,twig}"
    ],
    "purgecssWhitelist": [],
    "critical": [
      {
        "url": "",
        "template": "index"
      },
      {
        "url": "offline",
        "template": "offline"
      },
      {
        "url": "error",
        "template": "error"
      },
      {
        "url": "503",
        "template": "503"
      },
      {
        "url": "404",
        "template": "404"
      }
    ],
    "criticalWhitelist": [],
    "download": [
      {
        "url": "https://www.google-analytics.com/analytics.js",
        "dest": "./web/js/"
      }
    ],
    "inlineJs": [
      "./node_modules/fg-loadcss/src/loadCSS.js",
      "./node_modules/fg-loadcss/src/cssrelpreload.js",
      "./node_modules/tiny-cookie/dist/tiny-cookie.min.js",
      "./src/js/inline/tab-handler.js"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome": "^1.1.0",
    "@fortawesome/fontawesome-free-brands": "^5.0.2",
    "@fortawesome/fontawesome-free-regular": "^5.0.2",
    "@fortawesome/fontawesome-free-solid": "^5.0.2",
    "@fortawesome/fontawesome-pro-light": "^5.0.2",
    "@fortawesome/fontawesome-pro-regular": "^5.0.2",
    "@fortawesome/fontawesome-pro-solid": "^5.0.2",
    "@fortawesome/vue-fontawesome": "^0.0.22",
    "axios": "^0.17.1",
    "fg-loadcss": "^2.0.1",
    "jquery": "^3.2.1",
    "lazysizes": "^2.0.6",
    "picturefill": "^3.0.2",
    "tiny-cookie": "^2.1.1",
    "vue": "^2.5.9"
  },
  "devDependencies": {
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "chalk": "^1.1.3",
    "copy": "^0.3.1",
    "critical": "^1.1.0",
    "cross-env": "^5.1.3",
    "download": "^6.2.5",
    "eslint": "^4.15.0",
    "eslint-config-spatie": "^2.0.3",
    "fancy-log": "^1.2.0",
    "fs": "^0.0.1-security",
    "git-rev-sync": "^1.7.1",
    "glob-all": "^3.1.0",
    "html-critical-webpack-plugin": "^1.0.1",
    "laravel-mix": "^1.7.2",
    "moment": "^2.14.1",
    "pa11y": "^4.11.0",
    "postcss-object-fit-images": "^1.1.2",
    "purgecss-webpack-plugin": "^0.18.0",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^18.0.0",
    "tailwindcss": "^0.3.0",
    "webpack": "^3.10.0",
    "webpack-load-plugins": "^0.1.2"
  },
  "eslintConfig": {
    "extends": "spatie",
    "rules": {
      "no-console": "off"
    }
  },
  "scripts": {
    "js-lint": "eslint ./src/js --ext .js,.vue --fix && exit 0",
    "dev": "npm run development",
    "development": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch": "cross-env NODE_ENV=development node_modules/webpack/bin/webpack.js --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "watch-poll": "npm run watch -- --watch-poll",
    "prod": "npm run production",
    "production": "cross-env NODE_ENV=production node_modules/webpack/bin/webpack.js --no-progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js"
  },
  "bugs": {
    "email": "hallo@marbles.be"
  }
}
